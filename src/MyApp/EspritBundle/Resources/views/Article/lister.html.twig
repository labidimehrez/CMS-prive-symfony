{% extends 'MyAppEspritBundle:Article:Template.html.twig' %}


 {% block menu_gauche  %}       

     
<div id="content">

	<ul class="menumenu"> {% for rubrique in rubrique  if rubrique.menu.id == 2 %}
		<li class="item1menu"><a href="#">{{  rubrique.title|capitalize|trans }}<span>R</span></a>
			<ul>
                            
                           {% for sousrubrique in sousrubrique if sousrubrique.rubrique|length > 0%}  
                                 {% if sousrubrique.rubrique.id == rubrique.id %} 
                            
                                       {% for article in article if ( article.sousrubrique|length > 0 ) and (article.sousrubrique.id == sousrubrique.id ) %}                           
	                      			<li class="subitem1menu"><a href="{{ path('my_app_esprit_article_voir',{'id':article.id}) }}">{{  sousrubrique.title|capitalize|trans }}<span>S</span></a></li>      
                                       {% endfor %}
                  
                                  {%endif%}
                           {% endfor %}
                                
                                
                           {% for article in article if article.rubrique|length > 0%}  
                                 {% if article.rubrique.id == rubrique.id %} 
				<li class="subitem2menu"><a href="{{ path('my_app_esprit_article_voir',{'id':article.id}) }}">{% if article.role.id == 1 %}{{article.nom |capitalize}} 
                                {% else %}<strike>{{article.nom|capitalize }}</strike>{% endif %}  <span>A</span></a></li>
		                  {%endif%}
                           {% endfor %}
                                
                                
                                
			</ul>
		</li>
		 
		 
		</li>
	 {% endfor %}</ul>

</div>




{% endblock %}
